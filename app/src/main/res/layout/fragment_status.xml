<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_blue"
        android:gravity="center"
        android:padding="12dp"
        android:text="Real-Time Temperature"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="12dp"
        android:text="running"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="27sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/blueFlag"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/batery"
        android:background="@mipmap/ic_blue_remote"/>

    <ImageView
        android:id="@+id/batery"
        android:layout_width="36dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/blueFlag"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/blueFlag"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_battery_10"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="51dp"
        android:text="FRONT"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="65dp"
        android:text="    BACK"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/blueFlag"
        android:layout_alignBottom="@+id/textView"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@drawable/frontxhdpi"/>

            <ImageView
                android:id="@+id/bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/select_t1"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/select_t2"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:src="@drawable/select_t3"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="7dp"
                android:src="@drawable/select_t4"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="34dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp1"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp2"
                android:layout_marginTop="19dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp3"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="39dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@drawable/backxhdpi"/>

            <ImageView
                android:id="@+id/bg5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/select_t5"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/temp6"
                android:src="@drawable/select_t6"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/temp7"
                android:src="@drawable/select_t7"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp9"
                android:layout_centerHorizontal="true"
                android:src="@drawable/select_t10"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/bg8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/bg10"
                android:layout_toLeftOf="@id/bg10"
                android:src="@drawable/select_t8"
                android:visibility="visible"/>


            <ImageView
                android:id="@+id/bg9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temp9"
                android:layout_toRightOf="@id/bg10"
                android:src="@drawable/select_t9"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/temp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp5"
                android:layout_marginTop="42dp"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/temp6"
                android:layout_alignBottom="@+id/temp6"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp6"
                android:layout_marginRight="8dp"
                android:layout_marginTop="34dp"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/temp8"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@id/bg9"
                android:layout_toRightOf="@id/bg9"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

            <TextView
                android:id="@+id/temp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp9"
                android:layout_centerHorizontal="true"
                android:text="0℃"
                android:textColor="@color/qmui_config_color_white"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:background="#e95525"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <info.hoang8f.widget.FButton
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TURN OFF"
                android:textColor="@color/qmui_config_color_white"
                fbutton:buttonColor="@color/app_color_blue_pressed"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/app_color_blue_disabled"
                fbutton:shadowEnabled="false"
                fbutton:shadowHeight="5dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <info.hoang8f.widget.FButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DELETE"
                android:textColor="@color/qmui_config_color_white"
                fbutton:buttonColor="@color/fbutton_color_pumpkin"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/fbutton_color_pomegranate"
                fbutton:shadowEnabled="false"
                fbutton:shadowHeight="5dp"/>

        </FrameLayout>


    </LinearLayout>


</RelativeLayout>
